<style>
    .display-image {
        background: #ffffff;
    }
</style>
<div class="container py-lg-3 mt-lg-3">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6 ">
            {{#ifNotEquals status "LoggedIn"}}
            <div class="card mb-2">
                <div class="card-body text-center">
                    <h4 class="card-title">
                        <strong>
                            <span class="text-primary">Enjoy</span> <span class="text-warning">your</span> <span
                                class="text-dark">game</span> <span class="text-success">without</span> <span
                                class="text-danger">disturbance</span>
                        </strong>
                    </h4>
                    <p> <strong>Simply</strong> <a href="/login" class="link-success"><b>Login</b></a> or <a
                            href="/register" class="link-primary"><b>Register</b></a></p>

                </div>
            </div>
            {{/ifNotEquals}}
            <div class="carousel slide d-none d-md-block" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a href="../assets/game_img/Shooting.png" data-lightbox="image-1" data-title="Shooting">
                            <img src="../assets/game_img/Shooting.png" class="d-block w-100 display-image"
                                alt="Shooting">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="../assets/game_img/Golf.png" data-lightbox="image-1" data-title="Golf">
                            <img src="../assets/game_img/Golf.png" class="d-block w-100 display-image" alt="Golf">
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="../assets/game_img/Cycling.png" data-lightbox="image-1" data-title="Cycling">
                            <img src="../assets/game_img/Cycling.png" class="d-block w-100 display-image" alt="Cycling">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 mb-4">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <strong>Upcoming Events</strong>
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <div class="row">
                                {{#each stream_data}}
                                {{#ifEquals this.type 'Upcoming'}}
                                <div class="col-sm-12 m-1">
                                    <a href="{{#ifNotEquals ../status "LoggedIn"}}/login{{/ifNotEquals}}{{#ifEquals ../status "LoggedIn"}}/stream{{/ifEquals}}"
                                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">{{this.title}}</div>
                                            {{this.category}}
                                        </div>
                                        <span class="badge bg-primary rounded-pill">{{this.date}}</span>
                                        &nbsp;
                                        <span class="badge bg-success rounded-pill">Set Reminder</span>
                                    </a>
                                </div>
                                {{/ifEquals}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            <strong>Live Events
                                {{>Live}}
                            </strong>
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <div class="row">
                                {{#each stream_data}}
                                {{#ifEquals this.type 'Live'}}
                                <div class="col-sm-12 m-1">
                                    <a href="{{#ifNotEquals ../status "LoggedIn"}}/login{{/ifNotEquals}}{{#ifEquals ../status "LoggedIn"}}/stream{{/ifEquals}}"
                                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">{{this.title}}</div>
                                            {{this.category}}
                                        </div>
                                        <span class="badge bg-success rounded-pill">Watch Now</span>
                                    </a>
                                </div>
                                {{/ifEquals}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            <strong>Archived Events</strong>
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <div class="row">
                                {{#each stream_data}}
                                {{#ifEquals this.type 'Archived'}}
                                <div class="col-sm-12 m-1">
                                    <a href="{{#ifNotEquals ../status "LoggedIn"}}/login{{/ifNotEquals}}{{#ifEquals ../status "LoggedIn"}}/stream{{/ifEquals}}"
                                        class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">{{this.title}}</div>
                                            {{this.category}}
                                        </div>
                                        <span class="badge bg-primary rounded-pill">{{this.date}}</span>
                                        &nbsp;
                                        <span class="badge bg-success rounded-pill">Watch Now</span>
                                    </a>
                                </div>
                                {{/ifEquals}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>