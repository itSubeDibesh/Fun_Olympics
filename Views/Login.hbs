<style>
    @import url('https://fonts.googleapis.com/css2?family=Bubblegum+Sans&display=swap');

    .card-title {
        font-family: 'Bubblegum Sans', cursive;
    }

    .w-80 {
        width: 80% !important;
    }
</style>

<div class="container py-lg-5 mt-lg-5">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6 d-none d-md-block">
            <img src="../assets/game_img/Assassin_Creed.png" class="d-block w-80 img-thumbnail" alt="Assassin's Creed">
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 mt-lg-5">
            <div class="card">
                <div class="col-md-6 d-none d-md-block">
                </div>
                <div class="card-header">
                    <h2 class="card-title text-center">Login</h2>
                </div>
                <div class="card-body">
                    <form class="form" action="/login" method="post">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" required
                                placeholder="name@example.com">
                            <label for="email">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" name="password" required
                                placeholder="Password" data-toggle="password">
                            <label for="password">Password</label>
                        </div>
                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="showPassword">
                            <label class="form-check-label" for="showPassword">Show Password</label>
                        </div>
                        <div class="mb-3 text-center">
                            <button type="submit" value="Login" class="btn btn-success"><i
                                    class="bi bi-unlock-fill"></i> Login</button>
                            <a href="/reset" class="btn">Forgot <span class="link-danger"><b>password</b></span>?</a>
                        </div>
                        <div class="text-center">
                            <a href="/register" class="btn">Don't have an account? <span
                                    class="link-primary"><b>Register</b></span></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>